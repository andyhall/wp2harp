doctype
html
  head
    title #{ wpdata.title }
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/css/style.css")
  
  body
  
    h1 Post metadata
    
    - var post = public.posts._data[slug]
    table
      each val, name in post
        - if (name==='wp:comment') continue
        tr
          td
            strong
              = name
            td
              - if (name==='category' || name==='wp:postmeta')
                table
                  each val2, name2 in val
                    tr
                      td
                        = name2
                      td
                        = val2
              - else
                = val
            
    h1 Post content
    
    != yield
    
    - var comments = post['wp:comment']
    if comments
      h1 Comments
      each com in comments
        table
          each val, name in com 
            tr
              td
                strong
                  = name
                td
                  = val
        hr
  
  